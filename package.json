{
    "name": "express-demo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        // 通过npm start命令，设置node的路径可以实现config及app/controllers的文件直接require，不需要路径，并利用nodemon启动服务
        "start": "NODE_PATH=./config:./app/controllers nodemon ./server.js"
    },
    "dependencies": {
        "async": "~1.3.0",
        "body-parser": "~1.13.2",
        "compression": "~1.5.1",
        "connect-flash": "~0.1.1",
        "cookie-parser": "~1.3.5",
        "debug": "~2.2.0",
        "ejs": "~2.3.3",
        "express": "~4.13.1",
        "express-session": "~1.11.3",
        "morgan": "~1.6.1",
        "mongoose": "~4.1.4",
        "crypto": "~0.0.3",
        "passport": "~0.2.2",
        "passport-local": "~1.0.0"
    },
    "devDependencies": {
        "gulp": "^3.9.0"
    }
}